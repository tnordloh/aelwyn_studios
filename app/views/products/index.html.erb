<h1>Listing products</h1>

<table border=1>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Details</th>
      <th>Height</th>
      <th>Width</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag("/uploads/" + product.image_url) %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.details %></td>
        <td><%= product.height %></td>
        <td><%= product.width %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %><br>
          <%= link_to 'Edit', edit_product_path(product) %><br>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><br>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
